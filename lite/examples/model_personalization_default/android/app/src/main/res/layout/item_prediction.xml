<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPrediction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:alpha="0.9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Winner Icon (visible only for top prediction) -->
        <TextView
            android:id="@+id/tvWinnerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ†"
            android:textSize="24sp"
            android:visibility="gone"
            android:layout_marginEnd="8dp" />

        <!-- Class Name -->
        <TextView
            android:id="@+id/tvClassName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cat"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Confidence Percentage -->
        <TextView
            android:id="@+id/tvConfidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95%"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tfl_color_primary"
            android:layout_marginEnd="8dp" />

        <!-- Confidence Bar Container -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="#EEEEEE"
            android:orientation="horizontal">

            <View
                android:id="@+id/viewConfidenceBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/tfl_color_primary" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
