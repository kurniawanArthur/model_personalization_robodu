<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleType="fillStart" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fr_camera_control_layout_margin_top"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tf_out_line"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/btnTrainingMode"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/fr_camera_btn_mode_padding"
                android:text="@string/radio_btn_training_mode"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fr_camera_btn_mode_text_size" />

            <RadioButton
                android:id="@+id/btnInferenceMode"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/fr_camera_btn_mode_padding"
                android:text="@string/radio_btn_inference_mode"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fr_camera_btn_mode_text_size" />
        </RadioGroup>

        <TextView
            android:id="@+id/tvInferenceTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fr_camera_tv_inference_time_margin"
            android:textColor="@color/tfl_color_orange"
            app:layout_constraintBottom_toTopOf="@id/optionsLayout" />

        <LinearLayout
            android:id="@+id/optionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fr_camera_cl_button_classes_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/layoutModelActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <Button
                    android:id="@+id/btnSaveModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/action_save_model"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/robo_du_green" />

                <Button
                    android:id="@+id/btnManageModels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/action_manage_models"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/robo_du_dark_gray" />

                <Button
                    android:id="@+id/btnNewModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_new_model"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/robo_du_red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutClassTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llClassOne"
                    style="@style/ClassButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvLabelClassOne"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/class_label_placeholder"
                            android:textSize="@dimen/fr_camera_tv_classes_text_size"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnEditClassOne"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/accessibility_edit_class"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="@color/robo_du_orange" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNumberClassOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/samples_count_placeholder" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llClassTwo"
                    style="@style/ClassButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvLabelClassTwo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/class_label_placeholder"
                            android:textSize="@dimen/fr_camera_tv_classes_text_size"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnEditClassTwo"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/accessibility_edit_class"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="@color/robo_du_orange" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNumberClassTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/samples_count_placeholder" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llClassThree"
                    style="@style/ClassButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvLabelClassThree"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/class_label_placeholder"
                            android:textSize="@dimen/fr_camera_tv_classes_text_size"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnEditClassThree"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/accessibility_edit_class"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="@color/robo_du_orange" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNumberClassThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/samples_count_placeholder" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutClassBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llClassFour"
                    style="@style/ClassButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvLabelClassFour"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/class_label_placeholder"
                            android:textSize="@dimen/fr_camera_tv_classes_text_size"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnEditClassFour"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/accessibility_edit_class"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="@color/robo_du_orange" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNumberClassFour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/samples_count_placeholder" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llClassFive"
                    style="@style/ClassButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvLabelClassFive"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/class_label_placeholder"
                            android:textSize="@dimen/fr_camera_tv_classes_text_size"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnEditClassFive"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/accessibility_edit_class"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="@color/robo_du_orange" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNumberClassFive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/samples_count_placeholder" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnStartTrain"
            style="@style/BigButton"
            android:background="@drawable/btn_big_green"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/optionsLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_start_training"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/fr_camera_tv_training_state_text_size_large"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnPauseTrain"
            style="@style/BigButton"
            android:background="@drawable/btn_big_yellow"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/optionsLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tvPauseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_pause_training"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/fr_camera_tv_training_state_text_size_medium"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressTraining"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/tv_loss_consumer_pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvTrainingEpoch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Epoch: 0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnResumeTrain"
            style="@style/BigButton"
            android:background="@drawable/btn_big_green"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/optionsLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_resume_training"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/fr_camera_tv_training_state_text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLossConsumerResume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnCollectSample"
            style="@style/BigButton"
            android:background="@drawable/btn_big_gray"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/optionsLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_collect_sample"
                android:textAllCaps="true"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/fr_camera_tv_training_state_text_size_large"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/tfl_color_orange"
        app:layout_anchorGravity="bottom" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
